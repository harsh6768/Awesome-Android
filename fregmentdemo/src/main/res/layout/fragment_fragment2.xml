<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment2">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/frag2_textId"
            android:layout_width="365dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Enter text"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frag2_btnId"
            android:layout_width="202dp"
            android:layout_height="61dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:text="Send Data"
            app:layout_constraintEnd_toEndOf="@+id/frag2_textId"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/frag2_textId"
            app:layout_constraintTop_toBottomOf="@+id/frag2_textId" />

        <TextView
            android:id="@+id/frag2_dataId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:text="Data"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/frag2_btnId"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/frag2_btnId"
            app:layout_constraintTop_toBottomOf="@+id/frag2_btnId" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>