<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <EditText
           android:id="@+id/frag1_textId"
           android:layout_width="365dp"
           android:layout_height="60dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="92dp"
           android:layout_marginEnd="8dp"
           android:ems="10"
           android:hint="Enter text"
           android:inputType="textPersonName"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <Button
           android:id="@+id/frag1_btnId"
           android:layout_width="202dp"
           android:layout_height="61dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="52dp"
           android:text="Send Data"
           app:layout_constraintEnd_toEndOf="@+id/frag1_textId"
           app:layout_constraintHorizontal_bias="0.47"
           app:layout_constraintStart_toStartOf="@+id/frag1_textId"
           app:layout_constraintTop_toBottomOf="@+id/frag1_textId" />

       <TextView
           android:id="@+id/frag1_dataId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="124dp"
           android:text="Data"
           android:textSize="16sp"
           app:layout_constraintEnd_toEndOf="@+id/frag1_btnId"
           app:layout_constraintHorizontal_bias="0.503"
           app:layout_constraintStart_toStartOf="@+id/frag1_btnId"
           app:layout_constraintTop_toBottomOf="@+id/frag1_btnId" />
   </android.support.constraint.ConstraintLayout>

</FrameLayout>