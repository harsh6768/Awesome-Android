<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialog">

    <Button
        android:id="@+id/alert_dialog_Id"
        android:layout_width="227dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="8dp"
        android:background="@color/splash_screen"
        android:text="Alert_Dialog"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/custom_dialog_Id"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:background="@color/splash_screen"
        android:text="Custom Dialog"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="@+id/alert_dialog_Id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alert_dialog_Id"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_Id" />

</android.support.constraint.ConstraintLayout>